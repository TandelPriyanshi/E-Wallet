{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js -d src/data-source.ts",
        "migration:show": "npm run typeorm migration:show",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert",
        "migration:generate": "npm run typeorm migration:generate",
        "migration:create": "npm run typeorm migration:create",
        "reset-db": "node -e \"const fs = require('fs'); const path = require('path'); const dbPath = path.join(__dirname, 'database.sqlite'); if (fs.existsSync(dbPath)) { fs.unlinkSync(dbPath); console.log('SQLite database reset successfully!'); } else { console.log('No database file found to reset.'); }\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@types/axios": "^0.9.36",
        "axios": "^1.11.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.1.0",
        "express-rate-limit": "^7.4.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.5",
        "reflect-metadata": "^0.2.2",
        "sqlite3": "^5.1.6",
        "tesseract.js": "^6.0.1",
        "typeorm": "^0.3.25",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.3.1",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.17",
        "@types/sqlite3": "^3.1.11",
        "autoprefixer": "^10.4.21",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    }
