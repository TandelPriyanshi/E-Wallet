{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}

